<div class="ui inverted segment">
  <%= form_for(word, html:{class: 'ui inverted form'}) do |f| %>
  <% if word.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(word.errors.count, "error") %> prohibited this word from being saved:</h2>

        <ul>
        <% word.errors.full_messages.each do |message| %>
          <li><%= message %></li>
  <% end %>
        </ul>
      </div>
    <% end %>
  <div class="six fields">
    <div class="field">
      <%= f.text_field :chinese, placeholder: 'chinese' %>
    </div>

    <div class="field">
      <%= f.text_field :english,  placeholder: 'english' %>
    </div>

    <div class="field">
      <%= f.text_field :pinyin, placeholder: 'pinyin' %>
    </div>

    <div class="field">
      <%= f.text_field :part_of_speech, placeholder: 'part of speech'  %>
    </div>

    <div class="field">
      <%= f.text_field :mnemonic, placeholder: 'mnemonic device' %>
    </div>

    <div class="field">
      <button class="ui submit fluid blue button" type="submit">Submit</button>
    </div>
  </div>
<% end %>
</div>
