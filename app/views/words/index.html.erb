<p id="notice"><%= notice %></p>

<h1>Words</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Chinese</th>
      <th>English</th>
      <th>Pinyin</th>
      <th>Part of speech</th>
      <th>Mnemonic</th>
      <th>Score</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @words.each do |word| %>
      <tr>
        <td><%= word.user.first_name %></td>
        <td><%= word.chinese %></td>
        <td><%= word.english %></td>
        <td><%= word.pinyin %></td>
        <td><%= word.part_of_speech %></td>
        <td><%= word.mnemonic %></td>
        <td><%# word.times_correct / word.times_tested %></td>
        <td><%= link_to 'Show', word %></td>
        <td><%= link_to 'Edit', edit_word_path(word) %></td>
        <td><%= link_to 'Destroy', word, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

